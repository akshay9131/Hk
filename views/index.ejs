<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>
<body>
  <div class="container mt-5">
  <table class="table">
    <a href="/adduser"><button type="button" class="btn btn-secondary">Add New User</button></a>
    <a href="/addtask"><button type="button" class="btn btn-secondary">Add New Task</button></a>
    <a href="/createsheet"><button type="button" class="btn btn-primary">Excel</button></a>
    <thead>
      <tr>
        <th scope="col">id</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Mobile No.</th>
        <th scope="col">Task</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach((e) => { %>
        <tr>
          <th scope="row"><%= e._id %></th>
          <td><%= e.name %></td>
          <td><%= e.email %></td>
          <td><%= e.mobile %></td>
          <td><a href="/showtask/<%= e._id %>"><button type="button" class="btn btn-secondary">Show Task</button></a></td>
        </tr>
      <% }) %>
      
    </tbody>
  </table>
  
  </div>
</body>
</html>
